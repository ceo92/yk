<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yumi.kyungmin.mapper.ItemMapper">

  <insert id="save" keyProperty="id" useGeneratedKeys="true">
    insert into(item_name , price , stock_quantity)
    values(#{itemDto.itemName} , #{itemDto.price} , #{itemDto.stockQuantity})

  </insert>

  <update id="update">
    update item
    set item_name = #{itemDto.itemName} , price = #{itemDto.price} , stock_quantity = #{itemDto.stockQuantity}
    where id = #{id}

  </update>

  <select id="findById" resultType="Item">
    select id , item_name , price , stock_quantity
    from item where id = #{id}

  </select>

  <select id="findAll" resultType="Item"> <!--왜 Item일까 그냥 리턴값  하나하나가 Itemdㅣㄴ가 -->
    select *
    from item
  </select>





</mapper>